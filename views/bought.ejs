    <script>

        let productsNum = document.querySelector('.productsNum');
        let buyCount = document.querySelector('.buyCount')
        const cards = document.querySelectorAll('#bought .card');

        const allCount = document.querySelector('.allCount');
        const allPrice = document.querySelector('.allPrice');

        cards.forEach(card => { 
            let count = +card.querySelector('.count').innerText;
            let price = +card.querySelector('.thisPrice').getAttribute('data-price');
            allPrice.innerText = +allPrice.innerText + count *  price;
            card.querySelector('.thisPrice').innerText = count * price;
        })
        cards.forEach(card => {
            let count = card.querySelector('.count');
            let pluseminuseBtns = card.querySelectorAll('.btn');

            pluseminuseBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    let countNum = +count.textContent;
                    let cardGin = card.querySelector('.thisPrice');

                    if(btn.className.search('minuse') !== -1 && countNum > 1) {
                        count.innerText = --countNum;
                        allCount.innerText--;
                        allPrice.innerText -= +cardGin.getAttribute('data-price');
                        cardGin.innerText = countNum * (+cardGin.getAttribute('data-price'));
                    }
                    if(btn.className.search('pluse') !== -1) {
                        count.innerText = ++countNum;
                        allCount.innerText++;
                        allPrice.innerText = +allPrice.innerText + (+cardGin.getAttribute('data-price'));
                        cardGin.innerText = countNum * (+cardGin.getAttribute('data-price'));
                    }
                    if(true) {
                        const productId = recursia(btn).getAttribute('id');
                        const user = '<%- JSON.stringify(user)%>'

                        fetch('/bought', {
                            method: 'put',
                            headers: {
                                'content-type': 'application/json'
                            },
                            body: JSON.stringify({count: +count.innerText, userId: JSON.parse(user).id, productId: +productId})
                        })
                    }
                })
            })
        })

        function recursia(elem) {
            if (elem.parentElement.className.search('card') !== -1) {
                return elem.parentElement;
            }
            return recursia(elem.parentElement);
        }

        document.querySelectorAll('.delete').forEach(btn => {
            btn.addEventListener('click', () => {     
                const productId = recursia(btn).getAttribute('id');
                const user = '<%- JSON.stringify(user)%>'

                fetch('/bought', {
                    method: 'delete',
                    headers: {
                        'content-type': 'application/json'
                    },
                    body: JSON.stringify({ userId: JSON.parse(user).id, productId })
                }).then(() => {
                    document.getElementById(productId).style.display = 'none';
                    buyCount.innerText = +buyCount.innerText - 1;
                    productsNum.innerText = buyCount.innerText;
                    allPrice.innerText -= +document.getElementById(productId).querySelector('.thisPrice').innerText;
                    allCount.innerText -= +document.getElementById(productId).querySelector('.count').innerText;
                })
            })
        })

    </script>
